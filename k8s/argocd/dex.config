connectors:
  - type: ldap
    id: ldap
    name: LDAP
    config:
      host: glauth.glauth:3893
      bindDN: $dex.ldap.bindDN
      bindPW: $dex.ldap.bindPW

      insecureNoSSL: true
      insecureSkipVerify: false
      userSearch:
        baseDN: ou=argocd-admins,dc=catdock,dc=org
        filter: "(objectClass=posixAccount)"
        username: uid
        idAttr: uid
        emailAttr: mail
        nameAttr: uid
      groupSearch:
        baseDN: ou=users,dc=catdock,dc=org
        filter: "(objectClass=posixGroup)"
        userMatchers:
          - userAttr: uid
            groupAttr: memberUid
        nameAttr: ou
